<input type="date" @bind-value="BindableDate" class="form-control" />

@code {

    private DateTimeOffset? _bindableDate;
    private DateTimeOffset? BindableDate
    {
        get
        {
            return _bindableDate;
        }
        set
        {
            _bindableDate = value;
            Value = BindableDate.Value.ToString();
            ValueChanged.InvokeAsync(Value);
        }
    }

    [Parameter]
    public string Value
    {
        get
        {
            return BindableDate.Value.ToString();
        }
        set
        {
            if (BindableDate == null)
            {
                DateTimeOffset parsedDate;
                if (DateTimeOffset.TryParse(value, out parsedDate))
                {
                    BindableDate = parsedDate;
                }
            }
        }
    }

    [Parameter]
    public EventCallback<string> ValueChanged { get; set; }
}
